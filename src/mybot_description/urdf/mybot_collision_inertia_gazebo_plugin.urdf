<?xml version="1.0"?>
<robot name="mybot">
    <!-- 재질 정의 -->
    <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
    </material>

    <!-- Base link -->
    <link name="base_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://mybot_description/meshes/base_link.dae"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.008"/>
            <geometry>
                <box size="0.925 0.38 0.21"/>
            </geometry>
        </collision>
        <collision>
            <origin xyz="0 0 0.035"/>
            <geometry>
                <box size="0.154 0.627 0.07"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="50"/>
            <origin xyz="0.0 0.0 0.0"/>
            <inertia ixx="2.288641" ixy="0" ixz="0" iyy="5.103976" iyz="0" izz="3.431465"/>
        </inertial>
    </link>
    <!-- Gazebo 속성: 베이스 링크 -->
    <gazebo reference="base_link">
        <mu1>0.2</mu1>
        <mu2>0.2</mu2>
    </gazebo>

    <!-- Camera link -->
    <link name="camera_link">
        <visual>
            <geometry>
                <box size="0.02 0.02 0.02"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.02 0.02 0.02"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.000083" ixy="0" ixz="0" iyy="0.000083" iyz="0" izz="0.000083"/>
        </inertial>
    </link>
    <!-- Gazebo 속성: 카메라 링크 (색상 추가) -->
    <gazebo reference="camera_link">
        <material>Gazebo/Red</material>
    </gazebo>

    <joint name="camera_joint" type="fixed">
        <parent link="base_link"/>
        <child link="camera_link"/>
        <origin xyz="0.40 0.0 0.04"/>
    </joint>

    <!-- Front right wheel -->
    <link name="front_right_wheel_link">
        <visual>
            <geometry>
                <mesh filename="package://mybot_description/meshes/wheel_type1.dae"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="1.570795 0 0"/>
            <geometry>
                <cylinder length="0.11653" radius="0.16459"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="8"/>
            <inertia ixx="0.1171" ixy="0" ixz="0" iyy="0.1361" iyz="0" izz="0.1171"/>
        </inertial>
    </link>

    <!-- Gazebo 속성: 바퀴 링크 -->
    <gazebo reference="front_right_wheel_link">
        <mu1>0.3</mu1>
        <mu2>0.2</mu2>
    </gazebo>
    <joint name="front_right_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="front_right_wheel_link"/>
        <origin rpy="3.14 0 0" xyz="0.249 -0.29153 -0.0702"/>
        <axis xyz="0 -1 0"/>
        <dynamics damping="0.0" friction="20"/>
    </joint>

    <!-- Front left wheel -->
    <link name="front_left_wheel_link">
        <visual>
            <geometry>
                <mesh filename="package://mybot_description/meshes/wheel_type2.dae"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="1.570795 0 0"/>
            <geometry>
                <cylinder length="0.11653" radius="0.16459"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="8"/>
            <inertia ixx="0.1171" ixy="0" ixz="0" iyy="0.1361" iyz="0" izz="0.1171"/>
        </inertial>
    </link>
    <!-- Gazebo 속성: 바퀴 링크 -->
    <gazebo reference="front_left_wheel_link">
        <mu1>0.3</mu1>
        <mu2>0.2</mu2>
    </gazebo>

    <joint name="front_left_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="front_left_wheel_link"/>
        <origin rpy="0 0 0" xyz="0.249 0.29153 -0.0702"/>
        <axis xyz="0 1 0"/>
        <dynamics damping="0.0" friction="20"/>
    </joint>

    <!-- Rear left wheel -->
    <link name="rear_left_wheel_link">
        <visual>
            <geometry>
                <mesh filename="package://mybot_description/meshes/wheel_type2.dae"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="1.570795 0 0"/>
            <geometry>
                <cylinder length="0.11653" radius="0.16459"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="8"/>
            <inertia ixx="0.1171" ixy="0" ixz="0" iyy="0.1361" iyz="0" izz="0.1171"/>
        </inertial>
    </link>
    <!-- Gazebo 속성: 바퀴 링크 -->
    <gazebo reference="rear_left_wheel_link">
        <mu1>0.3</mu1>
        <mu2>0.2</mu2>
    </gazebo>
    <joint name="rear_left_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="rear_left_wheel_link"/>
        <origin rpy="0 0 0" xyz="-0.249 0.29153 -0.0702"/>
        <axis xyz="0 1 0"/>
        <dynamics damping="0.0" friction="20"/>
    </joint>

    <!-- Rear right wheel -->
    <link name="rear_right_wheel_link">
        <visual>
            <geometry>
                <mesh filename="package://mybot_description/meshes/wheel_type1.dae"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="1.570795 0 0"/>
            <geometry>
                <cylinder length="0.11653" radius="0.16459"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="8"/>
            <inertia ixx="0.1171" ixy="0" ixz="0" iyy="0.1361" iyz="0" izz="0.1171"/>
        </inertial>
    </link>
    <!-- Gazebo 속성: 바퀴 링크 -->
    <gazebo reference="rear_right_wheel_link">
        <mu1>0.3</mu1>
        <mu2>0.2</mu2>
    </gazebo>

    <joint name="rear_right_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="rear_right_wheel_link"/>
        <origin rpy="3.14 0 0" xyz="-0.249 -0.29153 -0.0702"/>
        <axis xyz="0 -1 0"/>
        <dynamics damping="0.0" friction="20"/>
    </joint>

    <!-- diff_drive 플러그인 적용 -->
    <gazebo>
        <plugin filename="libgazebo_ros_diff_drive.so" name="diff_drive">
            <ros>
                <namespace>/</namespace>
                <remapping>cmd_vel:=cmd_vel</remapping>
                <remapping>odom:=odom</remapping>
            </ros>

            <!-- 업데이트 빈도 -->
            <update_rate>30</update_rate>

            <!-- 바퀴 수 및 조인트 설정 -->
            <num_wheel_pairs>2</num_wheel_pairs>
            <left_joint>front_left_wheel</left_joint>
            <right_joint>front_right_wheel</right_joint>
            <left_joint>rear_left_wheel</left_joint>
            <right_joint>rear_right_wheel</right_joint>

            <!-- 바퀴 사이 거리 및 직경 -->
            <wheel_separation>0.58306</wheel_separation>
            <wheel_separation>0.58306</wheel_separation>
            <wheel_diameter>0.33</wheel_diameter>
            <wheel_diameter>0.33</wheel_diameter>

            <!-- 토크 및 속도 제한 -->
            <max_wheel_torque>1000</max_wheel_torque>
            <max_wheel_acceleration>1.0</max_wheel_acceleration>

            <!-- 발행 옵션 -->
            <publish_odom>true</publish_odom>
            <publish_odom_tf>true</publish_odom_tf>

            <!-- joint_state_publisher 플러그인 발생함으로 "false -->
            <publish_wheel_tf>false</publish_wheel_tf>

            <!-- 프레임 설정 -->
            <odometry_frame>odom</odometry_frame>
            <robot_base_frame>base_link</robot_base_frame>

            <!-- 노이즈 파라미터 추가 -->
            <!-- <covariance_x>0.0001</covariance_x>
            <covariance_y>0.0001</covariance_y>
            <covariance_yaw>0.01</covariance_yaw> -->
        </plugin>
    </gazebo>

    <!-- joint_state_publisher 플러그인 적용 -->
    <gazebo>
        <plugin filename="libgazebo_ros_joint_state_publisher.so" name="joint_state_publisher">
            <ros>
                <remapping>~/out:=joint_states</remapping>
            </ros>
            <update_rate>30</update_rate>
            <joint_name>front_left_wheel</joint_name>
            <joint_name>front_right_wheel</joint_name>
            <joint_name>rear_left_wheel</joint_name>
            <joint_name>rear_right_wheel</joint_name>
        </plugin>
    </gazebo>
</robot>